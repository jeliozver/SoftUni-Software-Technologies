@model TrainSystem.Models.Trip

@{
    ViewBag.Title = "Edit";
}

<div class="wrapper">
    @using (Html.BeginForm("Edit", "Trip", FormMethod.Post, new { @class = "trip-create" }))
    {
        @Html.AntiForgeryToken()
        <div class="create-header">
            Edit Trip
        </div>
        <div class="create-origin">
            <div class="create-origin-label">Origin</div>
            <input class="create-origin-content" name="origin" value="@Model.Origin" />
        </div>
        <div class="create-destination">
            <div class="create-destination-label">Destination</div>
            <input class="create-destination-content" name="destination" value="@Model.Destination" />
        </div>
        <div class="create-business">
            <div class="create-business-label">Business Class Price</div>
            <input type="number" min="0" class="create-business-content" name="business" value="@Model.Business" />
        </div>
        <div class="create-economy">
            <div class="create-economy-label">Economy Class Price</div>
            <input type="number" min="0" class="create-economy-content" name="economy" value="@Model.Economy" />
        </div>
        <div class="create-button-holder">
            <button type="submit" class="submit-button">Edit Trip</button>
            <a type="button" href="/" class="back-button">Back</a>
        </div>
    }
</div>

