<h1>Delete Product</h1>
<section>
    <form action="/delete/{{id}}" onsubmit="checkValue()" method="POST">
        <div>
            <label for="priority">Priority</label>
            <input type="text" id="priority" value="{{priority}}" name="priority" disabled="disabled" />
            <label for="name">Name</label>
            <input type="text" id="name" value="{{name}}" name="name" disabled="disabled" />
            <label for="quantity">Quantity</label>
            <input type="text" id="quantity" value="{{quantity}}" name="quantity" disabled="disabled" />
            <label for="status">Status</label>
            <input type="checkbox" id="status" name="status" value="{{status}}" disabled="disabled" />
            <label for="status" id="status-label"></label>
            <button type="submit" class="accept">Delete</button>
            <button type="button" class="cancel" onclick="location.href='/'">Cancel</button>
        </div>
    </form>
</section>

<script>
    function checkValue() {
        document.getElementById("status").checked = true;
    }

    (function checkBox() {
        let checkbox = document.getElementById("status");
        checkbox.checked = checkbox.value !== "not bought";
    })();
</script>